.invoice-wrap
  .invoice-actions
    .button.pay-now.hidden.lifecycle#pay-now Pay Now
    .button.errored.hidden.lifecycle#errored Retry Payment
    .button.print#print Print


  .invoice
    .stamp(class="#{state}")
      .status
        .stamp-icon
          img.shadow-icon(data-src="invoice-#{state}")
        .txt= stampMeta.text
      .blurb= stampMeta.blurb
    .charge-date= _invoiceDate
    
    .nano-info Nanobox Inc.
    .invoic-num Invoice ##{number}
    .custom-data= paymentMethod.userInvoiceInfo
    table.line-items.apps
      tr.header
        td Item
        td Context
        td 
      each event in lineItems
        tr
          td= event.name
          td= event.context.name
          td= event.amount
    

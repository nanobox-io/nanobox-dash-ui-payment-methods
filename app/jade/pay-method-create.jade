.blue-item.lexi.pay-method-create
  
  .new-or-existing
    .option
      label New
        input(type="radio" name="new-or-existing" value="new" checked=!currentData.replaceExisting)
    .option#existing(class=currentData.replaceExisting? "" : "disabled")
      label Replace Existing : 
        input(type="radio" name="new-or-existing" value="existing" checked=currentData.replaceExisting)
      select
        each method in paymentMethods
          option(value="#{method.id}" selected=method.selected) #{method.name} - #{method.kind}
  
  .payment-methods
    label.method(data-kind="card")
      .icon
        img.shadow-icon(data-src="pay-card")
      | Credit Card
      input(type="radio" name="pay-methods" value="card")
  
    label.method(data-kind="paypal")
      .icon
        img.shadow-icon(data-src="pay-paypal")
      | Paypal
      input(type="radio" name="pay-methods" value="paypal")
  
    label.method(data-kind="direct")
      .icon
        img.shadow-icon(data-src="pay-direct")
      | Direct
      input(type="radio" name="pay-methods" value="direct")
  
  .payment-method
    label
      | Name : 
      input#name(placeholder="(For your benefit)" value="#{currentData.name}")
  .payment-holder

  .save-section
    .button.lifecycle.hidden.disabled#save Submit

.blue-item.lexi.pay-method-create
  
  .new-or-existing
    .option
      label New
        input(type="radio" name="new-orexisting" value="new" checked="true")
    .option
      label Replace Existing : 
        input(type="radio" name="new-orexisting" value="existing")
      select
        each method in paymentMethods
          option(value="#{method.id}") #{method.name} - #{method.kind}
  
  .payment-methods
    label.method(data-kind="card")
      .icon
        img.shadow-icon(data-src="pay-card")
      | Credit Card
      input(type="radio" name="pay-methods" value="card")
  
    label.method(data-kind="paypal")
      .icon
        img.shadow-icon(data-src="pay-paypal")
      | Paypal
      input(type="radio" name="pay-methods" value="paypal")
  
    label.method(data-kind="direct")
      .icon
        img.shadow-icon(data-src="pay-direct")
      | Direct
      input(type="radio" name="pay-methods" value="direct")
  
  .payment-method.lexi-blue
    label
      | Name : 
      input#name(placeholder="(For your benefit)")
  .payment-holder

  .save-section
    if apps.length == 0 
      .delete#delete-account 
        img.shadow-icon(data-src="close-x")
        .txt Delete
    .cancel#cancel Cancel
    .button.lifecycle#save Save 
